<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashboardFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dashboard_text_size"
            android:text="@string/dashboard_text_item"
            />
        <Spinner
            android:id="@+id/dashboard_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dashboard_text_size"
            android:text="@string/dashboard_text_name"/>
        <EditText
            android:id="@+id/dasboard_editText_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="@string/dashboard_editorText_yourName"/>

    </LinearLayout>
    <Button
        android:id="@+id/dashboard_button_pressme"
        android:layout_margin="25dp"
        android:text="@string/press_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
</FrameLayout>